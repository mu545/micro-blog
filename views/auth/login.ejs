<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
  <title>Login</title>

  <!-- General CSS Files -->
  <link rel="stylesheet" href="/stisla/modules/bootstrap/css/bootstrap.min.css?v=4.1.3">
  <link rel="stylesheet" href="/stisla/modules/fontawesome/css/all.min.css?v=5.5.0">

  <!-- CSS Libraries -->
  <link rel="stylesheet" href="/stisla/modules/bootstrap-social/bootstrap-social.css">

  <!-- Template CSS -->
  <link rel="stylesheet" href="/stisla/css/style.min.css?v=2.2.0">
  <link rel="stylesheet" href="/stisla/css/components.min.css?v=2.2.0">

</head>

<body>
  <div id="login">
    <section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <div class="login-brand">
              <img src="/images/micro-blog.svg" alt="logo" width="100" class="shadow-light rounded-circle">
            </div>

            <div class="card card-info">
              <div class="card-header"><h4>Login</h4></div>

              <div class="card-body">
                <form id="loginForm" method="POST" action="#" class="needs-validation" novalidate="">
                  <div id="loginFormMessages">
                    <!-- fill with messages -->
                  </div>
                  <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" type="text" class="form-control" name="username" data-input="login" tabindex="1" required autofocus>
                    <div class="invalid-feedback">
                      please fill in your username
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="d-block">
                    	<label for="password" class="control-label">Password</label>
                      <!--div class="float-right">
                        <a href="auth-forgot-password.html" class="text-small">
                          Forgot Password?
                        </a>
                      </div-->
                    </div>
                    <input id="password" type="password" class="form-control" name="password" data-input="login" tabindex="2" required>
                    <div class="invalid-feedback">
                      please fill in your password
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" name="remember" class="custom-control-input" tabindex="3" id="remember-me">
                      <label class="custom-control-label" for="remember-me">Remember Me</label>
                    </div>
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block" data-button="login" tabindex="4">
                      Login
                    </button>
                  </div>
                </form>

              </div>
            </div>
            <div class="mt-5 text-muted text-center">
              Don't have an account? <a href="/users/register">Create One</a>
            </div>
            <div class="simple-footer">
              Copyright &copy; Musa Sutisna 2019
              <br/>
              Themes By Stisla
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- General JS Scripts -->
  <script src="/stisla/modules/jquery.min.js?v=3.2.1"></script>
  <script src="/stisla/modules/popper.js?v=1.13.0"></script>
  <script src="/stisla/modules/tooltip.js?v=1.13.0"></script>
  <script src="/stisla/modules/bootstrap/js/bootstrap.min.js?v=4.1.3"></script>
  <script src="/stisla/modules/nicescroll/jquery.nicescroll.min.js"></script>
  <script src="/stisla/modules/moment.min.js"></script>
  <script src="/stisla/js/stisla.js"></script>
  
  <!-- JS Libraies -->
  <script src="/javascripts/plugins/message-xhr/message-xhr.js?v=1.1.0"></script>

  <!-- Page Specific JS File -->
  <script src="/javascripts/pages/login.js?v=1.0.0"></script>

  <!-- Template JS File -->
  <script src="/stisla/js/scripts.js?v=2.2.0"></script>
</body>
</html>