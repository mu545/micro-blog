<div id="mongo" class="card card-primary">
  <div class="card-body">
    <div class="row mt-4">
      <div class="col-12 col-lg-12">
        <div class="wizard-steps">
          <div class="wizard-step">
            <div class="wizard-step-icon">
              <i class="far fa-dot-circle"></i>
            </div>
            <div class="wizard-step-label">
              Start
            </div>
          </div>
          <div class="wizard-step wizard-step-active">
            <div class="wizard-step-icon">
              <i class="fas fa-database"></i>
            </div>
            <div class="wizard-step-label">
              Mongo
            </div>
          </div>
          <div class="wizard-step">
            <div class="wizard-step-icon">
              <i class="far fa-user"></i>
            </div>
            <div class="wizard-step-label">
              User Admin
            </div>
          </div>
          <div class="wizard-step">
            <div class="wizard-step-icon">
              <i class="far fa-check-circle"></i>
            </div>
            <div class="wizard-step-label">
              Complete
            </div>
          </div>
        </div>
      </div>
    </div>

    <form id="mongoSetupForm" method="POST" action="#" class="wizard-content mt-2 needs-validation">
      <div class="wizard-pane">
        <div class="form-group row align-items-center">
          <label class="col-md-4 text-md-right text-left">Mongo string</label>
          <div class="col-lg-4 col-md-6">
            <input type="text" name="mongo_string" class="form-control" data-input="mongo" required min="13" placeholder="mongodb://">
          </div>
        </div>
        <div class="form-group row align-items-center">
          <label class="col-md-4 text-md-right text-left">Username</label>
          <div class="col-lg-4 col-md-6">
            <input type="text" name="username" class="form-control" data-input="mongo" required placeholder="mongo username">
          </div>
        </div>
        <div class="form-group row align-items-center">
          <label class="col-md-4 text-md-right text-left">Password</label>
          <div class="col-lg-4 col-md-6">
            <input type="password" name="password" class="form-control" data-input="mongo" required placeholder="mongo password">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4"></div>
          <div class="col-lg-4 col-md-6 text-right">
            <button type="submit" class="btn btn-icon icon-right btn-primary">Next <i class="fas fa-arrow-right"></i></button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>